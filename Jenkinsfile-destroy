pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Abhinavt28/redis-one-click-automation.git',
                    credentialsId: 'github-creds'
            }
        }

        stage('Terraform Init') {
            steps {
                sh """
                    cd terraform
                    terraform init
                """
            }
        }

        stage('Terraform Destroy') {
            steps {
                sh """
                    cd terraform
                    terraform destroy -auto-approve
                """
            }
        }
    }
}
