pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Abhinavt28/redis-one-click-automation.git'
            }
        }

        stage('Terraform Init (Load S3 State)') {
            steps {
                dir('terraform') {
                    sh """
                        terraform init -input=false
                    """
                }
            }
        }

        stage('Terraform Plan Destroy') {
            steps {
                dir('terraform') {
                    sh """
                        terraform plan -destroy -out=tfdestroy -input=false
                    """
                }
            }
        }

        stage('Terraform Destroy') {
            steps {
                dir('terraform') {
                    sh """
                        terraform destroy -auto-approve -input=false
                    """
                }
            }
        }

    }

    post {
        success {
            echo "ğŸ—‘ï¸ Successfully Destroyed All Resources!"
        }
        failure {
            echo "âŒ Destroy Failed. Check logs!"
        }
    }
}
